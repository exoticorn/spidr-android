export do
	import 'base'
	import 'gles2'
	add_path :cpp_include_dir, 'include'
end

! sources/*.cpp

case @build_tags
when tag('linux')
	add_global_attribute :libs, 'SDL'
	! sources/linux/*.cpp
when tag('android')
	! sources/android/*.cpp
	! sources/android/java/**/*.java
	add_global_path :java_source_dirs, 'sources/android/java'
when tag('emscripten')
	! sources/emscripten/*.cpp
else
	raise 'unsupported platform'
end

